 		)
	</insert>


	<!--查询对应公司所以的员工信息-->
	<select id="selectComAllUser" resultType="com.ruoyi.project.system.user.domain.User">
		SELECT user_id as userId,user_name as userName FROM
		sys_user where del_flag = 0 and tag =0 and company_id = #{comid};
	</select>

	<!--根据用户编号查询用户基本信息-->
	<select id="selectUserInfoById" resultType="com.ruoyi.project.system.user.domain.User">
		SELECT user_id as userId,login_name as loginName,create_by as createBy,email as Email,user_name as userName FROM sys_user where user_id =#{user_id}
	</select>
</mapper> 